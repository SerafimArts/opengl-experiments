{
    "require": {
        "php": "^8.1",
        "ext-ffi": "*",
        "ffi/env": "^1.0",
        "ffi/proxy": "^1.0",
        "ffi/location": "^1.0",
        "ffi/scalar-utils": "^1.0",
        "vlucas/phpdotenv": "^5.4",
        "symfony/console": "^5.4|^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "phing/phing": "^3.0",
        "vimeo/psalm": "^4.22",
        "ffi-headers/glfw3-headers": "^1.0",
        "ffi-headers/opengl-headers": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "phing/phing-composer-configurator": true
        }
    },
    "scripts": {
        "app:run": "@php run",
        "app:precompile": "@php bin/precompile"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
